// Project tasks configuration. See https://zed.dev/docs/tasks for documentation.
//
// Example:
[
  {
    "label": "go test symbol",
    "command": "go",
    "args": [
      "test",
      "-v",
      "-count=1",
      "-cover",
      "-run",
      "$ZED_SYMBOL",
      "$ZED_DIRNAME"
    ],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "no_focus",
    "hide": "never"
  },
  {
    "label": "go test package",
    "command": "go",
    "args": ["test", "-v", "-count=1", "-cover", "$ZED_DIRNAME"],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "no_focus",
    "hide": "never"
  },
  {
    "label": "LazyGit",
    "command": "lazygit",
    "shell": {
      "program": "sh"
    },
    "hide": "on_success",
    "reveal_target": "center",
    "show_summary": false,
    "show_command": false,
    "allow_concurrent_runs": true,
    "use_new_terminal": true
  },
  {
    "label": "Toggle tests",
    "reveal_target": "center",
    "command": "zed-toggle-test-file",
    "hide": "on_success",
    "show_summary": false,
    "show_command": false,
    "allow_concurrent_runs": false,
    "use_new_terminal": false,
    "reveal": "never"
  }
]
