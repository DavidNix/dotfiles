{
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(tree:*)",
      "Bash(go build:*)",
      "Bash(go list:*)",
      "Bash(go mod tidy:*)",
      "Bash(go test:*)",
      "Bash(go vet:*)",
      "mcp__context7__*",
      "mcp__plugin_context7*",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git log:*)",
      "Bash(git rev-parse:*)",
      "Bash(git show:*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./.envrc)",
      "Read(./.envrc.*)",
      "Read(./.vault-password)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude Code\" with title \"Claude needs your input\" sound name \"Funk\"'"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": false,
    "nixpowers@nixpowers-marketplace": true,
    "ralph-wiggum@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true,
    "ralph-wiggum@claude-code-plugins": false,
    "pyright-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "swift-lsp@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "playwright@claude-plugins-official": true,
    "hookify@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "promptSuggestionEnabled": false,
  "autoUpdatesChannel": "latest"
}
