{
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(tree:*)",
      "Bash(go build:*)",
      "Bash(go test:*)",
      "Bash(go mod tidy:*)",
      "mcp__context7__*",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git log:*)",
      "Bash(git rev-parse:*)",
      "Bash(git show:*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./.envrc)",
      "Read(./.envrc.*)",
      "Read(./.vault-password)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude Code\" with title \"Claude needs your input\" sound name \"Funk\"'"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": true,
    "superpowers@superpowers-marketplace": true,
    "elements-of-style@superpowers-marketplace": true,
    "nixpowers@nixpowers-marketplace": true
  },
  "alwaysThinkingEnabled": true,
  "promptSuggestionEnabled": false
}
