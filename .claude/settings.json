{
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(tree:*)",
      "Bash(make fmt:*)",
      "Bash(make vet:*)",
      "Bash(make test:*)",
      "Bash(go build:*)",
      "Bash(go test:*)",
      "Bash(go mod tidy:*)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./.envrc)",
      "Read(./.envrc.*)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude Code\" with title \"Claude needs your input\" sound name \"Funk\"'"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": true
  },
  "alwaysThinkingEnabled": true
}
