source ~/.vimrc

" :actionlist <command name> in IDE will search for available actions

nmap <leader>V <Action>(SplitVertically)
nmap <leader>H <Action>(SplitHorizontally)
nmap <leader>U <Action>(Unsplit)
nmap <leader>UU <Action>(UnsplitAll)

" Use ctl+o and ctl+i
" nmap H :action Back<CR>
" nmap L :action Forward<CR>

map <leader>b <Action>(ToggleLineBreakpoint)
map <leader>n <Action>(GotoNextError)
map <leader>o <Action>(SelectInProjectView)
map <leader>a <Action>(Annotate)

map <leader>d <Action>(Debug)
map <leader>r <Action>(RenameElement)
map <leader>c <Action>(Stop)
map <leader>z <Action>(ToggleDistractionFreeMode)

nmap <leader>h <Action>(HighlightUsagesInFile)
nmap <leader>rr <Action>(Refactorings.QuickListPopupAction)
nmap <leader>s <Action>(ShowUsages)
nmap <leader>u <Action>(FindUsages)

nmap <leader>t <Action>(ActivateTerminalToolWindow)
nmap <leader>ai <Action>(ActivateAIAssistantToolWindow)

" Use system pasteboard
set clipboard=unnamed

" window navigation
map <C-j> <C-w>j<CR>
map <C-k> <C-w>k<CR>
map <C-h> <C-w>h<CR>
map <C-l> <C-w>l<CR>


Plug 'preservim/nerdtree'
Plug 'tpope/vim-commentary' " TODO Doesn't seem to work

" nnoremap ; ;
" set number

" " get back to normal mode quickly
" inoremap jk <Esc> 
